{% block sw_order_detail_content_tabs_general %}
    {% parent %}

    <sw-tabs-item v-if="isPAYPayment"
                  :disabled="isPAYTransactionRefundAllowed"
                  :route="{ name: 'paynl.refund.page.view', params: { id: $route.params.id } }"
                  :title="$tc('order-list-override.refund')">
        {{ $tc('order-list-override.refund') }}
    </sw-tabs-item>
{% endblock %}

{% block sw_order_detail_actions_abort %}
    <sw-button
            v-if="isPAYPayment"
            class="sw-order-detail__smart-bar-save-button"
            variant="primary"
            :disabled="isPAYTransactionRefundAllowed"
            :router-link="{ name: 'paynl.refund.page.view', params: { id: $route.params.id } }"
    >
        {{ $tc('order-list-override.refund') }}
    </sw-button>

    {% parent %}
{% endblock %}
