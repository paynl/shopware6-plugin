<tr class="sw-data-grid__row">
    <td class="sw-data-grid__cell sw-data-grid__cell--paynlTransactionId sw-data-grid__cell--align-left">
        <div class="sw-data-grid__cell-content">{{ product.label }}</div>
    </td>
    <td class="sw-data-grid__cell sw-data-grid__cell--paynlTransactionId sw-data-grid__cell--align-left">
        <div class="sw-data-grid__cell-content">{{ product.price.unitPrice }}</div>
    </td>
    <td class="sw-data-grid__cell sw-data-grid__cell--paynlTransactionId sw-data-grid__cell--align-left">
        <div class="sw-data-grid__cell-content">{{ product.price.quantity }}</div>
    </td>
    <td class="sw-data-grid__cell sw-data-grid__cell--paynlTransactionId sw-data-grid__cell--align-left">
        <div class="sw-data-grid__cell-content">
            {% if isShopware67 %}
                <mt-select v-model="productQuantity" :options="getProductQuantitySelect()" @update:model-value="onProductRefundQuantityChange" @change="onProductRefundQuantityChange" style="margin-bottom: 0 !important;" />
            {% else %}
                <sw-select-field v-model:value="productQuantity" @update:value="onProductRefundQuantityChange" @change="onProductRefundQuantityChange">
                    <option v-for="option in getProductQuantitySelect()" :key="option.value" :value="option.value">{{ option.label }}</option>
                </sw-select-field>
            {% endif %}
        </div>
    </td>
    <td class="sw-data-grid__cell sw-data-grid__cell--selection">
        <div class="sw-data-grid__cell-content">
            <sw-checkbox-field v-model="product.rstk" @update:value="onRestockChange" @change="onRestockChange"></sw-checkbox-field>
        </div>
    </td>
</tr>
