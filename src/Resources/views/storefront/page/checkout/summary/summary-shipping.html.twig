{% sw_extends '@Storefront/storefront/page/checkout/summary/summary-shipping.html.twig' %}

{% block page_checkout_summary_shippings %}
    {{ parent() }}

    {% if context.paymentMethod.extension('PaynlPaymentSurcharge').surcharge_amount %}
        <dt class="col-7 checkout-aside-summary-label">
            {{ "checkout.summarySurcharge"|trans|sw_sanitize }}
        </dt>

        <dd class="col-5 checkout-aside-summary-value">
            {{ context.paymentMethod.extension('PaynlPaymentSurcharge').surcharge_amount|currency }}{{ "general.star"|trans|sw_sanitize }}
        </dd>
    {% endif %}
{% endblock %}
